{
    "title":"Magento REST API",
    "description" : "Magento rest api",
    "credentials" : {
        "fields":{
          "username": {
              "viewClass": "TextFieldView",
              "label": "Username",
              "required": true,
              "placeholder": "Paste username"
          },
          "password": {
              "viewClass": "TextFieldView",
              "label": "Password",
              "required": true,
              "placeholder": "Paste password"
          },
          "url": {
              "viewClass": "TextFieldView",
              "label": "Password",
              "required": true,
              "placeholder": "Instance URL"
          }
        }
    },
    "actions": {
        "upsertProduct": {
            "title": "Create/Update Product",
            "main": "./lib/actions/upsertProduct.js",
            "metadata": {
                "in": "./lib/schemas/upsertProduct.in.json",
                "out": "./lib/schemas/upsertProduct.out.json"
            }
        },
        "upsertPrices": {
            "title": "Create/Update Prices",
            "main": "./lib/actions/upsertPrices.js",
            "metadata": {
                "in": "./lib/schemas/upsertPrices.in.json",
                "out": "./lib/schemas/upsertPrices.out.json"
            }
        }
    },
    "triggers":{
        "getProducts":{
            "title":"Get Products",
            "main":"./lib/triggers/getProducts.js",
            "type":"polling",
            "metadata": {
                "out": "./lib/schemas/getProducts.out.json"
            }
        },
        "getCustomers":{
            "title":"Get Customers",
            "main":"./lib/triggers/getCustomers.js",
            "type":"polling",
            "metadata": {
                "out": "./lib/schemas/getCustomers.out.json"
            }
        }
    }
}
